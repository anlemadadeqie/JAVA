<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ttms.dao.UserDAO">

    <insert id="insertUser" parameterType="User">
        insert into user(
        emp_no,
        emp_pass,
        type)
        values(
        #{emp_no},
        #{emp_pass},
        #{type})
    </insert>

    <delete id="deleteUser" parameterType="String">
        delete from user where emp_no = #{emp_no}
    </delete>

    <update id="updateUser" parameterType="User" >
        update user set
        emp_pass = #{emp_pass},
        type = #{type}
        where emp_no = #{emp_no}
    </update>

    <select id="selectUserByEmp_no" parameterType="String" resultType="User">
        select * from user where emp_no = #{emp_no}
    </select>

    <select id="selectUserByType" parameterType="int" resultType="User">
        select * from user where type = #{type}
    </select>

    <select id="selectUser" resultType="User">
        select * from user
    </select>


</mapper>